---
import PageLayout from "@/layouts/Base";
import PostPreview from "@/components/blog/PostPreview";
import SocialList from "@/components/SocialList";
import { getAllPosts, sortMDByDate } from "@/utils";

const MAX_POSTS = 1;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hi there!</h1>
		<p class="mb-4">
			I am a software engineer with a passion for building & designing user experiences that
			stand out. Presently, I am spearheading the development of cutting-edge Payment Systems at
			<a
        class="cactus-link inline-block"
        href="https://www.jpmorgan.com/payments/solutions/access"
      >JP Morgan Chase & Co.</a>, where I leverage my expertise to drive technological
			advancements. My focus extends to Artificial Intelligence, Distributed Systems as well.
			I completed my engineering from BITS Pilani, and have previously worked at
      <a
        class="cactus-link inline-block"
        href="https://www.nvidia.com/en-in/self-driving-cars/"
      >Nvidia Graphics</a> within the Autonomous vehicles space.
		</p>
		<SocialList />
	</section>
	<section aria-label="Blog post list" class="mt-16">
		<h2 class="title mb-4 text-xl">Posts</h2>
		<ul class="space-y-4 sm:space-y-2">
			{
				allPostsByDate.map((p) => (
					<li class="flex flex-col gap-x-2 sm:flex-row">
						<h1>Upcoming post</>
					</li>
				))
			}
		</ul>
	</section>
</PageLayout>
